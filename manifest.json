{
  "manifest_version": 3,
  "name": "Easy Note - Quick Notes",
  "version": "1.0",
  "description": "A convenient sidebar note-taking tool",
  "permissions": [
    "storage",
    "activeTab",
    "downloads"
  ],
  "action": {
    "default_title": "Open notes sidebar"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "sidebar.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 