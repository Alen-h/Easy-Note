{
  "manifest_version": 3,
  "name": "Easy Note - 便捷笔记",
  "version": "1.0",
  "description": "一个便捷的侧边栏笔记工具",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_title": "打开笔记侧边栏"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 